# ENVIRONNEMENT DE STAGING (PRÉ-PRODUCTION)
NODE_ENV=staging

# Serveur de staging
PORT=3000
HOST=0.0.0.0

# MongoDB de staging (serveur distant)
MONGODB_URI=mongodb://staging-server:27017/chat_db_staging

# Sécurité intermédiaire
SESSION_SECRET=staging_secret_change_me_randomly
COOKIE_SECURE=true
COOKIE_SAME_SITE=Strict

# CORS restreint
ALLOWED_ORIGINS=https://staging.votre-app.com

# Logging modéré
LOG_LEVEL=info

# Rate limiting modéré
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Upload
MAX_FILE_SIZE_MB=5
UPLOAD_PATH=/var/www/uploads/profile_pictures/

# Redis activé
REDIS_URL=redis://staging-redis:6379
USE_REDIS=true

# Debug limité
DEBUG=false
ENABLE_DETAILED_ERRORS=true
