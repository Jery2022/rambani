# ENVIRONNEMENT DE DÉVELOPPEMENT
NODE_ENV=development

# Serveur local
PORT=3000
HOST=localhost

# MongoDB local
MONGODB_URI=mongodb://localhost:27017/chat_db

# Sécurité relâchée pour le dev
SESSION_SECRET=dev_secret_not_for_production
COOKIE_SECURE=false
COOKIE_SAME_SITE=Lax

# CORS permissif pour le dev
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# JWT (optionnel)
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRY=7d

# EMAIL (si vous l'utilisez)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-password

# Logging verbeux
LOG_LEVEL=debug

# Rate limiting très permissif
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Upload
MAX_FILE_SIZE_MB=10
UPLOAD_PATH=./public/images/profile_pictures/

# Pas de Redis en dev
USE_REDIS=false

# Debug
DEBUG=true
ENABLE_DETAILED_ERRORS=true
