# ENVIRONNEMENT DE PRODUCTION
NODE_ENV=production

# Serveur de production
PORT=3000
HOST=0.0.0.0

# MongoDB de production (URL sécurisée)
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/chat_db_prod?retryWrites=true&w=majority

# Sécurité maximale
SESSION_SECRET=use_a_very_long_random_string_generated_securely_minimum_32_chars
COOKIE_SECURE=true
COOKIE_SAME_SITE=Strict

# CORS strict
ALLOWED_ORIGINS=https://votre-app.com,https://www.votre-app.com

# Logging minimal
LOG_LEVEL=error

# Rate limiting strict
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Upload
MAX_FILE_SIZE_MB=2
UPLOAD_PATH=/var/www/uploads/profile_pictures/

# Redis obligatoire
REDIS_URL=redis://production-redis:6379
USE_REDIS=true

# Pas de debug
DEBUG=false
ENABLE_DETAILED_ERRORS=false
